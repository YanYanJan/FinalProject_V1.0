<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/post_detail_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <RelativeLayout
                android:id="@+id/detail_rlv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">


                <FrameLayout
                    android:id="@+id/topbar"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignParentTop="true">

                    <TextView
                        android:id="@+id/quote_topbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="110dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/bungee_hairline"
                        android:maxLines="1"
                        android:text="@string/quote"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </FrameLayout>

                <View
                    android:layout_below="@+id/topbar"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="?android:attr/listDivider"/>

                <ImageView
                    android:id="@+id/detail_bookcover"
                    android:layout_width="78dp"
                    android:layout_height="101dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@color/colorPrimary"
                    android:elevation="2dp"
                    android:background="@drawable/myrec"
                    android:translationZ="2dp"/>

                <TextView
                    android:id="@+id/detail_title"
                    android:layout_width="235dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="70dp"
                    android:layout_toEndOf="@+id/detail_bookcover"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="@string/book"
                    android:textColor="@color/titleBlack"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/detail_author"
                    android:layout_width="235dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/detail_bookcover"
                    android:layout_below="@+id/detail_title"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@+id/detail_bookcover"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="@string/author"
                    android:textColor="@color/pageTitleGray"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/detail_rlv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_rlv1"
                android:layout_marginTop="30dp"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/detail_rate_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/amiko"
                    android:text="@string/rate"
                    android:textColor="@color/reviewDetailDarkGray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/detail_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_below="@+id/detail_rate_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/amiko"
                    android:text="4.5"
                    android:textColor="@color/rateYellow"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/detail_quote_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_rate"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/amiko"
                    android:text="@string/quote"
                    android:textColor="@color/reviewDetailDarkGray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/detail_quote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_quote_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/amiko"
                    android:text="@string/quote"
                    android:textColor="@color/pageTitleGray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/detail_tags_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_quote"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/amiko"
                    android:text="@string/tags"
                    android:textColor="@color/reviewDetailDarkGray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/detail_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_tags_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/amiko"
                    android:text="@string/hashtag"
                    android:textColor="@color/pageTitleGray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/detail_review_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_tags"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/amiko"
                    android:text="@string/thoughts"
                    android:textColor="@color/reviewDetailDarkGray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/detail_review"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_review_title"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/amiko"
                    android:text="@string/thoughts"
                    android:textColor="@color/pageTitleGray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/detail_datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_review"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/amiko"
                    android:text="@string/datetime"
                    android:textColor="@color/border"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_datetime"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/round_btn"
                    android:fontFamily="@font/abeezee"
                    android:text="@string/delete" />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>